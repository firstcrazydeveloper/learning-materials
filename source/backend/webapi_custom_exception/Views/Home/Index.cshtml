<script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#btnget").on('click', function () {
           // alert('Hi');
            $.ajax({
                url: "http://localhost:58806/api/Employee/4",
                type:"GET"
            }).done(function (resp) {
                alert(JSON.stringify(resp));
                alert("EmpNo" + resp.EmpNo + " EmpName " + resp.EmpName);
            }).error(function (xhr, textStatus, errorThrown) {
                alert(JSON.stringify(xhr));
                alert("Err>> " + textStatus + " , Error Message>>  " + errorThrown);
            });
            
        });
 
 
        $("#btnpost").on('click', function () {
            var Emp = {};
            Emp.EmpName = "MM";
          //  Emp.Salary = 12300;
            Emp.DeptName = "SYS";
            Emp.Designation = "MGR";
 
            $.ajax({
                url: "http://localhost:58806/api/EmployeeInfoAPI",
                type: "POST",
                data: Emp,
                datatype: "json",
                contenttype:"application/json;utf-8"
            }).done(function (resp) {
                alert("Record Added" + resp.EmpNo);
            }).error(function (xhr, textStatus, errorThrown) {
                alert("Err " + errorThrown);
            });
 
        });
    });
</script>

